---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    service: openaihub-api
    environment: dev
  name: openaihub-api
  namespace: {{ openaihub.namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      service: openaihub-api
      environment: dev
  template:
    metadata:
      labels:
        service: openaihub-api
        environment: dev
        version: v0.1
    spec:
      containers:
      - name: openaihub-api-server
        image: docker.io/ckadner/openaihub-api:0.1
        imagePullPolicy: IfNotPresent
        name: openaihub-ui
        ports:
        - containerPort: 8080
        env:
          - name: REACT_APP_API
            value: {{ openaihub.react_app_api }}
          - name: POD_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
        resources:
          limits:
            cpu: 50m
            memory: 64Mi
        livenessProbe:
          httpGet:
            path: /apis/v1alpha1/health_check?check_database=true&check_object_store=true
            port: 8080
          initialDelaySeconds: 180
          timeoutSeconds: 10
          periodSeconds: 60
          failureThreshold: 5

---
apiVersion: v1
kind: Service
metadata:
  labels:
    service: openaihub-api
  name: openaihub-api
  namespace: {{ openaihub.namespace }}
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8080
    nodePort: 0
  selector:
    service: openaihub-api
  type: NodePort